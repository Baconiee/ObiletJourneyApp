@model List<ObiletJourneyApp.Application.DTOs.JourneyDataDTO>
@{
    ViewData["Title"] = "Bus Journeys";
    Layout = null; // Or set your layout page if you have one
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <style>
        body {
            background-color: #fff;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }

        .appbar {
            background-color: #3f51b5;
            color: white;
            padding: 1rem 1rem 0.75rem 1rem;
            font-weight: 600;
            display: flex;
            align-items: center;
        }

        .appbar-subtitle {
            font-size: 0.9rem;
            opacity: 0.8;
            margin-top: 0.2rem;
        }

        .back-arrow {
            font-size: 1.5rem;
            color: white;
            margin-right: 2rem;
            cursor: pointer;
        }

        .card {
            margin-bottom: 0.75rem;
            border-radius: 0.4rem;
            box-shadow: 0 0 4px rgba(0, 0, 0, 0.1);
        }

        .time-label {
            font-size: 0.75rem;
            font-weight: 700;
            color: #4d4d90;
            text-transform: uppercase;
        }

        .time-value {
            font-weight: 700;
            font-size: 1.3rem;
            color: #00306e;
        }

        .arrow {
            font-weight: 700;
            font-size: 1.3rem;
            margin: 0 0.4rem;
            color: #00306e;
        }

        .route-text {
            font-size: 0.9rem;
            color: #555;
            margin-top: 0.25rem;
            font-weight: 500;
        }

        .price-tag {
            background-color: #d9534f;
            color: white;
            font-weight: 600;
            font-size: 1rem;
            padding: 0.35rem 0.9rem;
            border-radius: 0.3rem;
            text-align: center;
            min-width: 95px;
        }

        .journey-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.8rem 1rem;
        }

        .time-section {
            display: flex;
            flex-direction: column;
            width: 70%;
        }

        .time-pair {
            display: flex;
            gap: 0.6rem;
            align-items: center;
        }

        .time-column {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
    </style>
</head>
<body>
    <!-- Top App Bar -->
    <div class="appbar">
        <a asp-controller="Home" asp-action="Index"> <span class="back-arrow">←</span> </a>
        <div>
            <div>@Model[0].OriginLocation - @Model[0].DestinationLocation</div>
            <div class="appbar-subtitle">@Model[0].Journey.Departure.ToString("dd MMMM dddd", new System.Globalization.CultureInfo("tr-TR"))</div>
        </div>
    </div>

    <div class="container mt-3 mb-4">
        @foreach (var journey in Model)
        {
            <div class="card">
                <div class="journey-row">
                    <div class="time-section">
                        <div class="time-pair">
                            <div class="time-column">
                                <div class="time-label text-uppercase">Kalkış</div>
                                <div class="time-value">@journey.Journey.Departure.ToString("HH:mm")</div>
                            </div>
                            <div class="arrow">→</div>
                            <div class="time-column">
                                <div class="time-label text-uppercase">Varış</div>
                                <div class="time-value">@journey.Journey.Arrival.ToString("HH:mm")</div>
                            </div>
                        </div>
                        <div class="route-text">
                            @journey.Journey.Origin - @journey.Journey.Destination
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="price-tag">@journey.Journey.InternetPrice.ToString("F2") TL</div>
                    </div>
                </div>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
</body>
</html>